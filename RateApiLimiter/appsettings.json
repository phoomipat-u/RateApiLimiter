{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "RateLimit": {
    "Default": {
      "Endpoint": "*:/api/*",
      "Period": 10000,
      "Limit": 50
    },
    "Custom": [
      {
        "Endpoint": "/hotel/city",
        "Period": 5000,
        "Limit": 2
      },
      {
        "Endpoint": "/hotel/room",
        "Period": 10000,
        "Limit": 100
      }
    ]
  },
  "AllowedHosts": "*"
}
